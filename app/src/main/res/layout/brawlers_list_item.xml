<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_brawler_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/iv_brawler_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_brawler_image"
        app:layout_constraintStart_toStartOf="@+id/iv_brawler_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="spike" />

    <ImageView
        android:id="@+id/iv_brawler_image"
        android:layout_width="159dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brawler_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_brawler_star_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_brawler_star_power"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler_image"
        tools:text="2/2" />

    <ImageView
        android:id="@+id/iv_brawler_gadget"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler_image"
        app:srcCompat="@drawable/icon_settings" />

    <ImageView
        android:id="@+id/iv_brawler_star_power"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_brawler_gadget"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler_image"
        app:srcCompat="@drawable/icon_settings" />

    <TextView
        android:id="@+id/tv_brawler_gadget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_brawler_gadget"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler_image"
        tools:text="1/1" />

</androidx.constraintlayout.widget.ConstraintLayout>