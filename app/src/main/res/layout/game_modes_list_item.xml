<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/fl_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#123456">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_game_mode_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                tools:src="@drawable/ic_blue_skull"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_game_mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_game_mode_icon"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                tools:text="GEM GRAB"
                android:layout_toEndOf="@+id/iv_game_mode_icon"
                android:layout_marginLeft="16dp" />

        </RelativeLayout>

    </FrameLayout>


    <ImageView
        android:id="@+id/iv_game_mode_banner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_bar"
        tools:src="@drawable/activity_background" />
</androidx.constraintlayout.widget.ConstraintLayout>